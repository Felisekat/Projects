//returns tripple sum if if x and y are equal
#include<iostream>
using namespace std;

int sum(int, int);

int main()
{
	int a, b; 
	
	cout<< "Enter values for a and b: ";
	cin >> a;
	cin >>b;
	cout << sum(a,b) << endl;
	
	return 0;
}

int sum(int x, int y)
{
	int sum = 0;
	if (x == y){
		sum = ((x+y)*3);
	}
	else {
		sum = x + y;
	}
	
	return sum;
}

